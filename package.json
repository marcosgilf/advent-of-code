{
  "name": "advent-of-code",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .ts,.js,.mjs,.cjs . --fix",
    "format:prettier": "prettier \"**/*.{js,md}\" \"package.json\" --write --ignore-path .eslintignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eclint": "git ls-files | xargs eclint check",
    "lint:eslint": "eslint --ext .ts,.js,.mjs,.cjs .",
    "lint:prettier": "prettier \"**/*.{js,md}\" \"package.json\" --check",
    "prepare": "husky install",
    "release": "standard-version -t ''",
    "release:dry": "npm run release -- --dry-run",
    "test": "wtr src/**/test/*.test.js --node-resolve --coverage",
    "test:watch": "wtr src/**/test/*.test.js --node-resolve --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@open-wc/testing": "^3.0.3",
    "@web/test-runner": "^0.13.22",
    "eclint": "^2.8.1",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "prettier-plugin-package": "^1.3.0",
    "standard-version": "^9.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "eslint-config-prettier"
    ],
    "env": {
      "browser": true,
      "es2020": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  },
  "lint-staged": {
    "*": [
      "eclint fix"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100,
    "trailingComma": "all"
  }
}
